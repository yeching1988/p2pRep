//引入公共部分
@import url("public.less");
@import url("header.less");
@import url("global.less");
body{
    padding: 0;
    margin: 0;
}
//个人中心样式开始
//左侧部分开始
#leftSide{
    .panel{
        .panel-title{
           text-indent: 30px;
        }
        .panel-body{
            padding: 0;
            ul{
                li{
                    line-height: 38px;
                    text-indent: 55px;
                }
                li.active{
                    background-color:@color_blueMenu;
                    a{
                        color:@color_fff;
                    }
                }
            }
        }
    }
}
//右侧部分开始
#rightSide{
    #toggleBtn{
        display: none;
    }
    .panel-body{
        .rightCash{
            margin: 20px auto;
        }
        #AuthIcon{
            margin-top: 20px;
            .auth{
                padding-top: 15px;
                img{
                    margin-right: 20px;
                }
                p{
                    margin-top: 0;
                    font-weight: bold;
                    font-size:14px;
                }
            }
        }
    }
}
//父亲盒子
#mainContent{
    position:relative;
    height: 920px;
}
@media all and(max-width:320px){
    #mainContent{
        height: 950px;
    }
}
//在小屏和超小屏情况下样式：
@media all and(max-width:768px){
    body{
        overflow-x: hidden;
    }
    //左侧的定位
    #leftSide{
        position: absolute;
        left:0;
    }
    //右侧的定位(收起效果)
    #rightSide{
        position: absolute;
        right:-50% ;
        transition:all 1s ease-in;
        //显示切换按钮
        #toggleBtn{
            width: 20px;
            height: 20px;
            background: @color_blueMenu;
            line-height: 20px;
            text-align: center;
            color:@color_fff;
            padding: 0 5px;
            border-radius:5px;
            display: block;
            position: absolute;
            top:326px;
        }
    }
    //右侧定位(展开效果)
    #rightSide.active{
        right: 0;
        transition:all 1s ease-in;
    }
}
//引入页脚
@import url("footer.less");
